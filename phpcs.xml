<?xml version="1.0"?>
<ruleset name="WEEE Open Standard" namespace="WEEEOpen\CS\Standard">
    <description>Coding standard based on PSR1 and PSR12, with tabs instead of spaces</description>
    <exclude-pattern type="relative">resources/*</exclude-pattern>
    <exclude-pattern type="relative">docker/*</exclude-pattern>
    <exclude-pattern type="relative">config/*</exclude-pattern>

    <autoload>vendor/autoload.php</autoload>

    <rule ref="PSR1"/>
    <rule ref="PSR12">
        <exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
        <exclude name="Generic.Files.LineLength"/>
<!--        <exclude name="Squiz.PHP.CommentedOutCode"/>-->
    </rule>

    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>

